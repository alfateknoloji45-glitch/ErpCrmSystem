<UserControl x:Class="ErpCrm.Desktop.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- BaÅŸlÄ±k -->
            <TextBlock Grid.Row="0" 
                       Text="âš™ï¸ Ayarlar" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"
                       Margin="0,0,0,20" />
            
            <!-- KullanÄ±cÄ± Bilgileri -->
            <Border Grid.Row="1" 
                    Background="{StaticResource BackgroundBrush}"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ðŸ‘¤ KullanÄ±cÄ± Bilgileri" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,15" />
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Ad Soyad:" 
                                   FontWeight="SemiBold"
                                   Margin="0,5" />
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   Text="{Binding AdSoyad}"
                                   Margin="0,5" />
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Email:" 
                                   FontWeight="SemiBold"
                                   Margin="0,5" />
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Text="{Binding Email}"
                                   Margin="0,5" />
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Firma:" 
                                   FontWeight="SemiBold"
                                   Margin="0,5" />
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                   Text="{Binding FirmaAdi}"
                                   Margin="0,5" />
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Rol:" 
                                   FontWeight="SemiBold"
                                   Margin="0,5" />
                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                   Text="{Binding Rol}"
                                   Margin="0,5" />
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                   Text="Durum:" 
                                   FontWeight="SemiBold"
                                   Margin="0,5"
                                   Visibility="{Binding DemoMu, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <Border Grid.Row="4" Grid.Column="1" 
                                Background="{StaticResource WarningBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                HorizontalAlignment="Left"
                                Margin="0,5"
                                Visibility="{Binding DemoMu, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding DemoBilgisi}" 
                                       FontSize="12"
                                       Foreground="#333" />
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Åžifre DeÄŸiÅŸtirme -->
            <Border Grid.Row="2" 
                    Background="{StaticResource BackgroundBrush}"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="ðŸ” Åžifre DeÄŸiÅŸtir" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,15" />
                    
                    <TextBlock Text="Åžifre deÄŸiÅŸtirme Ã¶zelliÄŸi yakÄ±nda eklenecektir."
                               Foreground="Gray"
                               FontStyle="Italic"
                               Margin="0,0,0,15" />
                    
                    <!-- Hata MesajÄ± -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="{StaticResource ErrorBrush}"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                               Margin="0,0,0,10" />
                    
                    <!-- BaÅŸarÄ± MesajÄ± -->
                    <TextBlock Text="{Binding SuccessMessage}" 
                               Foreground="{StaticResource SuccessBrush}"
                               Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}"
                               Margin="0,0,0,10" />
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
