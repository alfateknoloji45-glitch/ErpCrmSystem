<UserControl x:Class="ErpCrm.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource BackgroundBrush}"
                Padding="20"
                CornerRadius="8,8,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ  Ana Sayfa" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}" />
                </StackPanel>
                
                <Button Content="ðŸ”„ Yenile"
                        Command="{Binding RefreshCommand}"
                        HorizontalAlignment="Right"
                        Background="#607D8B"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,10"
                        Cursor="Hand" />
            </Grid>
        </Border>
        
        <!-- Ä°statistik KartlarÄ± -->
        <Grid Grid.Row="1" Margin="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- MÃ¼ÅŸteri KartÄ± -->
            <Border Grid.Column="0" 
                    Background="#E3F2FD" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="ðŸ‘¥" FontSize="32" HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding CustomerCount}" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource PrimaryBrush}" />
                    <TextBlock Text="MÃ¼ÅŸteriler" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Foreground="Gray" />
                </StackPanel>
            </Border>
            
            <!-- ÃœrÃ¼n KartÄ± -->
            <Border Grid.Column="1" 
                    Background="#E8F5E9" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="5,0">
                <StackPanel>
                    <TextBlock Text="ðŸ“¦" FontSize="32" HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding ProductCount}" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#4CAF50" />
                    <TextBlock Text="ÃœrÃ¼nler" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Foreground="Gray" />
                </StackPanel>
            </Border>
            
            <!-- Fatura KartÄ± -->
            <Border Grid.Column="2" 
                    Background="#FFF3E0" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="5,0">
                <StackPanel>
                    <TextBlock Text="ðŸ“„" FontSize="32" HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding InvoiceCount}" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#FF9800" />
                    <TextBlock Text="Faturalar" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Foreground="Gray" />
                </StackPanel>
            </Border>
            
            <!-- Ciro KartÄ± -->
            <Border Grid.Column="3" 
                    Background="#F3E5F5" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="5,0">
                <StackPanel>
                    <TextBlock Text="ðŸ’°" FontSize="32" HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding TotalRevenue, StringFormat='{}{0:N0} â‚º'}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#9C27B0" />
                    <TextBlock Text="Toplam Ciro" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Foreground="Gray" />
                </StackPanel>
            </Border>
            
            <!-- DÃ¼ÅŸÃ¼k Stok KartÄ± -->
            <Border Grid.Column="4" 
                    Background="#FFEBEE" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="âš ï¸" FontSize="32" HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding LowStockCount}" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#F44336" />
                    <TextBlock Text="DÃ¼ÅŸÃ¼k Stok" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Foreground="Gray" />
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Son Faturalar -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8" 
                Margin="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" 
                        Background="{StaticResource BackgroundBrush}"
                        Padding="15"
                        CornerRadius="8,8,0,0">
                    <TextBlock Text="ðŸ“‹ Son Faturalar" 
                               FontSize="16" 
                               FontWeight="SemiBold" />
                </Border>
                
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding RecentInvoices}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0"
                          RowHeight="40"
                          ColumnHeaderHeight="45"
                          Background="White">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Padding" Value="15,10" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="15,10" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" 
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fatura No" 
                                            Binding="{Binding FaturaNo}" 
                                            Width="150" />
                        
                        <DataGridTextColumn Header="Tarih" 
                                            Binding="{Binding FaturaTarihi, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                            Width="120" />
                        
                        <DataGridTextColumn Header="Tip" 
                                            Binding="{Binding FaturaTipiText}" 
                                            Width="100" />
                        
                        <DataGridTextColumn Header="MÃ¼ÅŸteri" 
                                            Binding="{Binding CariAdi}" 
                                            Width="*" />
                        
                        <DataGridTextColumn Header="Tutar" 
                                            Binding="{Binding GenelToplam, StringFormat='{}{0:N2} â‚º'}" 
                                            Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Durum" 
                                            Binding="{Binding DurumText}" 
                                            Width="100" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- YÃ¼kleme GÃ¶stergesi -->
        <Border Grid.Row="0" Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="YÃ¼kleniyor..." 
                           FontSize="18" 
                           Foreground="White" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
