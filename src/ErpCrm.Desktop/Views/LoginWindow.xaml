<Window x:Class="ErpCrm.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:ErpCrm.Desktop.ViewModels"
        Title="ERP/CRM/POS - GiriÅŸ" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Window.DataContext>
        <viewmodels:LoginViewModel />
    </Window.DataContext>
    
    <Grid>
        <Border Background="White" 
                CornerRadius="8" 
                Margin="30"
                Padding="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" 
                                  ShadowDepth="2" 
                                  Color="#20000000" />
            </Border.Effect>
            
            <StackPanel VerticalAlignment="Center">
                <!-- Logo/BaÅŸlÄ±k -->
                <TextBlock Text="ðŸ¢" 
                           FontSize="48" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10" />
                
                <TextBlock Text="ERP/CRM/POS" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource PrimaryBrush}" />
                
                <TextBlock Text="Sisteme GiriÅŸ" 
                           FontSize="14" 
                           HorizontalAlignment="Center"
                           Foreground="Gray" 
                           Margin="0,5,0,30" />
                
                <!-- Email -->
                <TextBlock Text="Email" 
                           FontSize="12" 
                           Foreground="Gray" 
                           Margin="0,0,0,5" />
                
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,15" />
                
                <!-- Åžifre -->
                <TextBlock Text="Åžifre" 
                           FontSize="12" 
                           Foreground="Gray" 
                           Margin="0,0,0,5" />
                
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource ModernPasswordBox}"
                             Margin="0,0,0,10"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             KeyDown="PasswordBox_KeyDown" />
                
                <!-- Demo Bilgisi -->
                <TextBlock Text="Demo: admin@demo.com / Demo123!" 
                           FontSize="11" 
                           Foreground="Gray" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20" />
                
                <!-- Hata MesajÄ± -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="{StaticResource ErrorBrush}"
                           FontSize="12"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}" />
                
                <!-- GiriÅŸ Butonu -->
                <Button x:Name="LoginButton"
                        Content="GÄ°RÄ°Åž YAP" 
                        Click="LoginButton_Click"
                        Height="45"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,20,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4"
                                    Padding="20,10">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="Gray" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- YÃ¼kleme GÃ¶stergesi -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="GiriÅŸ yapÄ±lÄ±yor..." 
                               Foreground="Gray" 
                               FontSize="12" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
